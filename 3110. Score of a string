//3110. Score of a string

class Solution {
    public int scoreOfString(String s) {
        int[] arr = new int[s.length()];
        int sum = 0;
        char[] sArr = s.toCharArray();
        
        for(int i = 0; i < s.length(); i++) {
            arr[i] = (int)sArr[i];
        }
        
        for(int i = 1; i < arr.length; i++) {
            sum += Math.abs(arr[i] - arr[i - 1]);
        }
        
        return sum;
    }
}
